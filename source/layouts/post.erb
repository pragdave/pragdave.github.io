<% wrap_layout :layout do %>

  <%= partial('shared/topbar') %>

  hello!

  <main class="content" role="main">

    <article class="post">
      <header class="post-header">
        <section class="post-meta">
          <time class="post-date"
                datetime="<%= current_article.date.strftime('%Y-%m-%d') %>">
            <%= current_article.date.strftime(blog_settings.date_format) %>
          </time>
          <% if tags? %>
            in <%= tags %>
          <% end %>
        </section>
      </header>

      <section class="post-content">
        <%= yield %>
      </section>


      <%= partial 'shared/disqus' %>

      <footer class="post-footer">



        <div class="row">

          <div class="col-sm-2">
            <section class="card share">
              <div class="card-header">
                <h4>Share</h4>
              </div>


              <div class="">
                <ul class="list-unstyled" >
                  <li>
                    <a class="icon-twitter"
                       href="<%= twitter_url %>"
                       onclick: "window.open(this.href,
                       'twitter-share',
                       'width=550,height=235');
                       return false;"
                      <span class="hidden">Twitter</span>
                    </a>
                  </li>

                  <li>
                    <a class="icon-facebook"
                       href="<%= facebook_url %>"
                       onclick: "window.open(this.href,
                       'facebook-share',
                       'width=580,height=296');
                       return false;"
                      <span class="hidden">Facebook</span>
                    </a>
                  </li>

                  <li>
                    <a class="icon-google-plus"
                       href="<%= google_plus_url %>"
                       onclick: "window.open(this.href,
                       'google_plus-share',
                       'width=490,height=530');
                       return false;"
                      <span class="hidden">Google+</span>
                    </a>
                  </li>
                </ul>
              </div>

            </section>
          </div>


          <div class="col-sm-9 read-next" >
            <div class="card" >
              <div class="card-header" >
                <h4>You might also enjoy…</h4>
              </div>

              <div class="row card-block" >

                <div class="col-sm-6" >
                  <% if next_article = current_article.next_article %>
                    <nav class="card summary" >
                      <%# attributes = { href: next_article.url }.merge(cover(next_article)) %>
                      <header class="card-header" >
                        <h4>
                          <a class="read-next-story" href="<%= next_article.url %>">
                            <%= next_article.title %>
                          </a>
                        </h4>
                      </header>
                      
                      <p class="card-block ">
                        <%= summary(next_article)
                        %>&nbsp;<a class="read-more"
                                   href="<%= next_article.url %>">»</a>
                      </p>
                    </nav>
                  <% end %>
                </div>


                <div class="col-sm-6" >
                  <% if prev_article = current_article.previous_article %>
                    <nav class="card summary" >
                      <%# attributes = { href: prev_article.url }.merge(cover(prev_article)) %>
                      <header class="card-header" >
                        <h4>
                          <a class="read-next-story" href="<%= prev_article.url %>">
                            <%= prev_article.title %>
                          </a>
                        </h4>
                      </header>
                      
                      <p class="card-block">
                        <%= summary(prev_article)
                        %>&nbsp;<a class="read-more"
                                   href="<%= prev_article.url %>">»</a>
                      </p>
                    </nav>
                  <% end %>
                </div>
                


              </div>
            </div>
          </div>
        </div>
      </footer>

    </article>

  </main>

<% end %>
